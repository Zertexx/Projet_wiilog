{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1 class="p-3 jumbotron">{{ contact.name }}</h1>

    <a class="btn btn-secondary mb-2" href="{{ path('contact_edit', {'id': contact.id}) }}">Editer</a>
    <a class="btn btn-secondary mb-2" href="{{ path('contact_index') }}">Retour</a>

    <table class="table table-striped table-bordered ">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ contact.enterprise }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
